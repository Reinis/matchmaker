{% extends "base.twig" %}

{% block title %}Welcome{% endblock %}

{% block content %}
    <h1 class="text-4xl font-bold text-center mb-8">
        Welcome!
    </h1>
    {% if message %}
        <div class="text-2xl text-center mb-8">
            {{ message }}
        </div>
    {% endif %}
    {% if session.auth.user %}
        <div>
            {% set image = user.profilePic %}
            {% if image %}
                <div class="flex justify-center">
                    <img src="{{ image.resizedImageExtendedPath }}" alt="image">
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
