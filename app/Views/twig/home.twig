{% extends "base.twig" %}

{% block title %}Welcome{% endblock %}

{% block content %}
    <h1 class="text-4xl font-bold text-center mb-8">
        Welcome!
    </h1>
    {% if message %}
        <div class="text-2xl text-center mb-8">
            {{ message }}
        </div>
    {% endif %}
    {% if session.auth.user %}
        <div class="flex justify-center">
            <form action="/upload" method="post" enctype="multipart/form-data" class="flex flex-col gap-8">
                <input type="file" name="imageFile" id="imageFile">
                <input type="submit" value="Upload Image" name="submit" class="btn-gray w-48 hover:bg-gray-200">
            </form>
        </div>
        <div>
            {% if image %}
                <div class="flex justify-center">
                    <img src="{{ image }}" alt="image">
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
